<Layout 
    title="emguapi.com | Not√≠cias, Mobilidade e Utilidade P√∫blica em Guapimirim"
    description="O portal de not√≠cias hiperlocal da Baixada Fluminense. Acompanhe o status do Ramal Guapimirim, hor√°rios de √¥nibus, den√∫ncias e o guia comercial da cidade."
    image="/fotos/estacao-guapi.jpg"
>
    <Navbar />

    <main class="max-w-5xl mx-auto p-6 bg-white dark:bg-[#112240] dark:border-white/5 min-h-screen shadow-2xl my-8 rounded-[2.5rem] overflow-hidden border border-gray-200 transition-colors duration-300">

        <section class="mb-8">
            {destaquesFinais.length > 0 ? (
                <div class="relative group" id="carousel-parent">
                    <div id="carousel-container" class="flex overflow-x-auto snap-x snap-mandatory scroll-smooth no-scrollbar rounded-[2.5rem] gap-0">
                        {destaquesFinais.map((noticia, index) => (
                            <div class="min-w-full snap-center" data-index={index}>
                                <DestaquePrincipal 
                                    titulo={noticia.data.titulo}
                                    resumo={noticia.data.resumo}
                                    categoria={noticia.data.categoria}
                                    imagem={noticia.data.imagem || "/fotos/estacao-guapi.jpg"} 
                                    link={`/noticias/${noticia.id.replace(/\.md$/, '')}`}
                                />
                            </div>
                        ))}
                    </div>
                    <div class="absolute bottom-12 right-12 flex gap-3 z-10" role="tablist">
                        {destaquesFinais.map((_, i) => (
                            <button 
                                type="button"
                                aria-label={`Ir para o destaque ${i + 1}`}
                                aria-controls="carousel-container"
                                class="carousel-dot w-3 h-3 rounded-full bg-white/20 border border-white/40 transition-all hover:bg-red-base" 
                                data-slide={i}
                            ></button>
                        ))}
                    </div>
                </div>
            ) : (
                <div class="bg-navy-dark h-[400px] rounded-3xl flex items-center justify-center text-white italic">Carregando not√≠cias...</div>
            )}
        </section>

        {/* Box do Trem */}
        <section class="mb-12">
            <a href="/horarios" class="group block">
                <div class="bg-ice dark:bg-white/5 border-l-8 border-navy-base dark:border-white/20 rounded-2xl p-4 flex flex-col sm:flex-row sm:items-center justify-between shadow-sm hover:shadow-md transition-all gap-4">
                    <div class="flex items-center gap-4">
                        <div class={`h-6 w-6 rounded-full shadow-sm border-2 border-white/50 shrink-0 ${currentStatus.bg}`}></div>
                        <div>
                            <h3 class="text-xs font-black uppercase tracking-widest text-navy-soft dark:text-gray-400 mb-1">Circula√ß√£o de Trens</h3>
