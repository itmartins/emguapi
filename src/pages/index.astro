---
// src/pages/index.astro
import { getCollection } from 'astro:content';
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar.astro';
import DestaquePrincipal from '../components/DestaquePrincipal.astro';
import NoticiaCard from '../components/NoticiaCard.astro';
import VozComunidade from '../components/VozComunidade.astro';

// Importamos os dados do trem
import statusData from '../data/statusTrem.json'; 

// --- LÓGICA DE NOTÍCIAS ---
const todasNoticias = (await getCollection('noticias')).sort(
    (a, b) => new Date(b.data.data).getTime() - new Date(a.data.data).getTime()
);

// 1. Destaques (Carrossel - Top 5)
const noticiasCarrossel = todasNoticias
    .filter(noticia => noticia.data.destaque === true)
    .slice(0, 5);

const destaquesFinais = noticiasCarrossel.length > 0 ? noticiasCarrossel : todasNoticias.slice(0, 5);

// 2. Grid "Cidade Alerta"
const todasNoticiasRestantes = todasNoticias.filter(
    noticia => !destaquesFinais.some(d => d.id === noticia.id)
);

const noticiasParaGrid = todasNoticiasRestantes.slice(0, 5);
const existeMaisNoticias = todasNoticiasRestantes.length > 5;

// --- LÓGICA DA VOZ DA COMUNIDADE ---
const todasDenuncias = (await getCollection('denuncias')).sort(
    (a, b) => new Date(b.data.data).getTime() - new Date(a.data.data).getTime()
);
const denunciasRecentes = todasDenuncias.slice(0, 4);
const temMaisDenuncias = todasDenuncias.length > 4;

// --- CONFIGURAÇÃO VISUAL DO STATUS ---
const statusConfig = {
    'normal': { bg: 'bg-green-600', ping: 'bg-green-400', text: 'text-green-600', label: 'Operação Normal' },
    'atrasado': { bg: 'bg-yellow-500', ping: 'bg-yellow-300', text: 'text-yellow-600', label: 'Com Atrasos' },
    'suspenso': { bg: 'bg-red-base', ping: 'bg-red-300', text: 'text-red-base', label: 'Suspensa' },
    'manutencao': { bg: 'bg-navy-base', ping: 'bg-blue-400', text: 'text-navy-base', label: 'Manutenção' },
    'indisponivel': { bg: 'bg-gray-500', ping: 'bg-gray-400', text: 'text-gray-600', label: 'Sem Informação' }
};

const statusKey = statusData.estado.toLowerCase() as keyof typeof statusConfig;
const currentStatus = statusConfig[statusKey] || statusConfig['indisponivel'];

const horaAtualizacaoTrem = statusData.ultimaAtualizacao || "Não informada";
---

<Layout 
    title="emguapi.com | Notícias, Mobilidade e Utilidade Pública em Guapimirim"
    description="O portal de notícias hiperlocal da Baixada Fluminense. Acompanhe o status do Ramal Guapimirim, horários de ônibus, denúncias e o guia comercial da cidade."
    image="/fotos/estacao-guapi.jpg"
>
    <Navbar />

    <main class="max-w-5xl mx-auto p-6 bg-white dark:bg-[#112240] dark:border-white/5 min-h-screen shadow-sm my-8 rounded-sm overflow-hidden border border-gray-100 transition-colors duration-300">

        <section class="mb-8 border-b border-gray-100 pb-8">
            {destaquesFinais.length > 0 ? (
                <div class="relative group" id="carousel-parent">
                    <div id="carousel-container" class="flex overflow-x-auto snap-x snap-mandatory scroll-smooth no-scrollbar rounded-sm gap-0 border border-gray-100 dark:border-white/10">
                        {destaquesFinais.map((noticia, index) => (
                            <div class="min-w-full snap-center" data-index={index}>
                                <DestaquePrincipal 
                                    titulo={noticia.data.titulo}
                                    resumo={noticia.data.resumo}
                                    categoria={noticia.data.categoria}
                                    imagem={noticia.data.imagem || "/fotos/estacao-guapi.jpg"} 
                                    link={`/noticias/${noticia.id.replace(/\.md$/, '')}`}
                                />
                            </div>
                        ))}
                    </div>
                    <div class="absolute bottom-12 right-12 flex gap-3 z-10" role="tablist">
                        {destaquesFinais.map((_, i) => (
                            <button 
                                type="button"
                                aria-label={`Ir para o destaque ${i + 1}`}
                                aria-controls="carousel-container"
                                class="carousel-dot w-3 h-3 rounded-full bg-white/20 border border-white/40 transition-all hover:bg-navy-base" 
                                data-slide={i}
                            ></button>
                        ))}
                    </div>
                </div>
            ) : (
                <div class="bg-navy-dark h-[400px] rounded-sm flex items-center justify-center text-white italic">Carregando notícias...</div>
            )}
        </section>

        {/* Box do Trem */}
        <section class="mb-12">
            <a href="/horarios" class="group block">
                <div class="bg-ice dark:bg-white/5 border-l-4 border-navy-base dark:border-white/20 border border-gray-100 rounded-sm p-5 flex flex-col sm:flex-row sm:items-center justify-between transition-all gap-4">
                    <div class="flex items-center gap-4">
                        <div class={`h-6 w-6 rounded-full shadow-sm border border-white/50 shrink-0 ${currentStatus.bg}`}></div>
                        <div>
                            <h3 class="text-xs font-bold uppercase tracking-widest text-navy-soft dark:text-gray-400 mb-1">Mobilidade</h3>
                            <p class="text-lg font-black text-navy-dark dark:text-white leading-none">Ramal Guapimirim</p>
                            <p class="text-[10px] text-gray-500 mt-1 uppercase tracking-wider font-medium">Atualizado às: {horaAtualizacaoTrem}</p>
                        </div>
                    </div>

                    <div class="flex items-center justify-center gap-3 bg-white dark:bg-black/20 px-4 py-2 rounded-sm border border-gray-200 dark:border-white/10 group-hover:border-navy-base/30 transition-colors">
                        {currentStatus.label !== 'Sem Informação' && (
                            <span class="relative flex h-3 w-3">
                                <span class={`animate-ping absolute inline-flex h-full w-full rounded-full opacity-75 ${currentStatus.ping}`}></span>
                                <span class={`relative inline-flex rounded-full h-3 w-3 ${currentStatus.bg}`}></span>
                            </span>
                        )}
                        <span class={`font-black text-xs uppercase ${currentStatus.text}`}>
                            {currentStatus.label}
                        </span>
                    </div>
                </div>
            </a>
        </section>

        <section class="mb-12">
            <h2 class="text-xl font-black uppercase tracking-tighter text-navy-dark dark:text-white mb-8 flex items-center gap-3 border-b border-gray-100 pb-4">
                <span class="w-2 h-6 bg-red-base inline-block rounded-sm"></span>
                Cidade Alerta
            </h2>
            
            <div class="grid md:grid-cols-2 gap-10 mb-12">
                
                {noticiasParaGrid.slice(0, 2).map(noticia => (
                    <NoticiaCard 
                        categoria={noticia.data.categoria}
                        titulo={noticia.data.titulo}
                        resumo={noticia.data.resumo}
                        data={noticia.data.data}
                        link={`/noticias/${noticia.id.replace(/\.md$/, '')}`}
                        imagem={noticia.data.imagem || "/fotos/estacao-guapi.jpg"}
                    />
                ))}

                {/* --- ANÚNCIO NO MEIO DO GRID --- */}
                <a 
                    href="https://www.gigamaisfibra.com.br/internet-streaming/globoplay/" 
                    target="_blank" 
                    rel="noopener noreferrer sponsored"
                    aria-label="Publicidade: Giga Mais Fibra"
                    data-ad="true"
                    class="group block bg-gray-50 dark:bg-white/5 rounded-sm overflow-hidden border border-gray-200 hover:border-navy-base/50 dark:border-white/10 flex flex-col h-full relative transition-all"
                >
                    <div class="absolute top-4 right-4 z-10">
                        <span class="bg-white/95 text-navy-dark text-[10px] font-bold px-2 py-1 rounded-sm uppercase tracking-widest border border-gray-200 shadow-sm">Patrocinado</span>
                    </div>
                    
                    <div class="relative w-full h-56 overflow-hidden bg-white border-b border-gray-100 dark:border-white/5">
                        <img 
                            src="/banners/bbb-giga.jpg" 
                            alt="Giga+ Fibra com Globoplay" 
                            loading="lazy"
                            decoding="async"
                            class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-105 opacity-95 group-hover:opacity-100" 
                        />
                    </div>

                    <div class="p-6 flex flex-col flex-grow justify-center text-center">
                        <h3 class="text-xl font-black text-navy-dark dark:text-white leading-tight mb-2 group-hover:text-red-base uppercase">
                            Giga+ com Globoplay
                        </h3>
                        <p class="text-gray-600 dark:text-gray-400 text-sm leading-relaxed">
                            Assine a internet fibra oficial da sua casa e leve o BBB 24h, novelas e séries originais.
                        </p>
                        <span class="mt-4 inline-flex items-center justify-center gap-2 text-red-base text-xs font-black uppercase tracking-widest">
                            Ver Ofertas <span class="group-hover:translate-x-1 transition-transform">→</span>
                        </span>
                    </div>
                </a>

                {noticiasParaGrid.slice(2, 5).map(noticia => (
                    <NoticiaCard 
                        categoria={noticia.data.categoria}
                        titulo={noticia.data.titulo}
                        resumo={noticia.data.resumo}
                        data={noticia.data.data}
                        link={`/noticias/${noticia.id.replace(/\.md$/, '')}`}
                        imagem={noticia.data.imagem || "/fotos/estacao-guapi.jpg"}
                    />
                ))}
            </div>

            <div class="text-center pt-6 border-t border-gray-100">
                <a 
                    href="/noticias"
                    class="group inline-flex items-center gap-2 mx-auto text-xs font-black uppercase tracking-widest text-navy-base dark:text-white hover:text-red-base transition-colors px-8 py-3 rounded-sm border border-gray-200 dark:border-white/20 hover:border-navy-base/50 bg-white dark:bg-white/5"
                >
                    Acessar Acervo de Notícias
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2.5" stroke="currentColor" class="w-4 h-4 group-hover:translate-x-1 transition-transform">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5 21 12m0 0-7.5 7.5M21 12H3" />
                    </svg>
                </a>
            </div>
        </section>

        {/* BANNER: Guia Comercial */}
        <section class="mb-12">
            <a href="/classificados" class="group block bg-navy-dark rounded-sm p-8 flex flex-col md:flex-row items-center justify-between border border-navy-base relative overflow-hidden">
                <div class="relative z-10 text-center md:text-left mb-6 md:mb-0">
                    <h2 class="text-2xl font-black uppercase tracking-tight text-white mb-2 flex items-center gap-3 justify-center md:justify-start">
                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-6 h-6 text-red-base"><path stroke-linecap="round" stroke-linejoin="round" d="M13.5 21v-7.5a.75.75 0 01.75-.75h3a.75.75 0 01.75.75V21m-4.5 0H2.36m11.14 0H18m0 0h3.64m-1.39 0V9.349m-16.5 11.65V9.35m0 0a3.001 3.001 0 003.75-.615A2.993 2.993 0 009.75 9.75c.896 0 1.7-.393 2.25-1.016a2.993 2.993 0 002.25 1.016c.896 0 1.7-.393 2.25-1.016a3.001 3.001 0 003.75.614m-16.5 0a3.004 3.004 0 01-.621-4.72L4.318 3.44A1.5 1.5 0 015.378 3h13.243a1.5 1.5 0 011.06.44l1.19 1.189a3 3 0 01-.621 4.72m-13.5 8.65h3.75a.75.75 0 00.75-.75V13.5a.75.75 0 00-.75-.75H6.75a.75.75 0 00-.75.75v3.75c0 .415.336.75.75.75z" /></svg>
                        Classificados e Serviços
                    </h2>
                    <p class="text-gray-300 text-sm max-w-md mx-auto md:mx-0">
                        Descubra os melhores serviços e apoie o comércio local.
                    </p>
                </div>
                
                <div class="relative z-10 shrink-0">
                    <span class="bg-navy-base text-white font-black uppercase tracking-widest text-xs px-6 py-3 rounded-sm border border-white/10 group-hover:border-white/30 transition-colors inline-block shadow-sm">
                        Acessar Classificados →
                    </span>
                </div>
            </a>
        </section>

        {/* SEÇÃO: VOZ DA COMUNIDADE */}
        <section class="mb-12">
            <div class="flex flex-wrap justify-between items-end mb-8 gap-4 border-b border-gray-100 pb-4">
                <div>
                    <h2 class="text-xl font-black uppercase tracking-tighter text-navy-dark dark:text-white flex items-center gap-3">
                        <span class="w-2 h-6 bg-navy-base dark:bg-white inline-block rounded-sm"></span>
                        Voz da Comunidade
                    </h2>
                </div>
                <a href="/denuncia" class="border border-red-base text-red-base text-[10px] font-black px-4 py-2 rounded-sm uppercase hover:bg-red-base hover:text-white transition-all">
                    Enviar Relato
                </a>
            </div>

            <div class="grid md:grid-cols-2 gap-6 mb-8">
                {denunciasRecentes.length > 0 ? (
                    denunciasRecentes.map(relato => (
                        <VozComunidade 
                            bairro={relato.data.bairro}
                            relato={relato.data.resumo_relato}
                            autor={relato.data.autor}
                        />
                    ))
                ) : (
                    <div class="col-span-2 bg-gray-50 dark:bg-white/5 p-8 rounded-sm border border-gray-100 text-center text-gray-500">
                        <p>Nenhum relato em destaque nesta semana.</p>
                    </div>
                )}
            </div>

            {temMaisDenuncias && (
                <div class="text-center">
                    <a href="/denuncia" class="text-navy-base dark:text-white font-black uppercase text-xs hover:text-red-base transition-colors">
                        Ler relatos anteriores →
                    </a>
                </div>
            )}
        </section>

        {/* PUBLICIDADE HORIZONTAL */}
        <div class="mb-4 pt-8 border-t border-gray-100 flex flex-col items-center">
            <span class="text-[10px] font-black text-gray-400 uppercase tracking-widest mb-3">Publicidade</span>
            <div class="w-full h-48 md:h-32 bg-[#000066] dark:bg-black rounded-sm flex items-center justify-center group cursor-pointer border border-transparent hover:border-gray-200 transition-all overflow-hidden relative">
                <img 
                    src="/banners/seu-anuncio.webp" 
                    loading="lazy"
                    decoding="async"
                    class="w-full h-full object-contain transition-opacity duration-300 opacity-90 group-hover:opacity-100" 
                    alt="Anúncio Giga Mais"
                />
                <a 
                    href="https://www.gigamaisfibra.com.br/" 
                    target="_blank"
                    rel="noopener noreferrer sponsored"
                    aria-label="Publicidade: Giga Mais Fibra"
                    data-ad="true"
                    class="absolute inset-0 z-10"
                >
                   <span class="sr-only">Visitar site do anunciante</span>
                </a>
            </div>
        </div>
        
    </main>
</Layout>

<script>
    const container = document.getElementById('carousel-container');
    const dots = document.querySelectorAll('.carousel-dot');
    
    let currentIndex: number = 0;
    let autoPlayInterval: number | undefined;

    function scrollToSlide(index: number) {
        if (!container) return;
        const width = container.offsetWidth;
        if (index >= dots.length) index = 0;
        container.scrollTo({ left: width * index, behavior: index === 0 ? 'auto' : 'smooth' });
        updateDots(index);
        currentIndex = index;
    }

    function updateDots(index: number) {
        dots.forEach((dot, i) => {
            if (i === index) {
                dot.classList.add('bg-navy-base', 'w-6');
                dot.classList.remove('bg-white/20');
                dot.setAttribute('aria-selected', 'true');
            } else {
                dot.classList.remove('bg-navy-base', 'w-6');
                dot.classList.add('bg-white/20');
                dot.setAttribute('aria-selected', 'false');
            }
        });
    }

    dots.forEach((dot, i) => {
        dot.addEventListener('click', () => {
            scrollToSlide(i);
            resetInterval();
        });
    });

    function startInterval() {
        const prefersReducedMotion = window.matchMedia('(prefers-reduced-motion: reduce)').matches;
        
        if (!prefersReducedMotion) {
            autoPlayInterval = window.setInterval(() => {
                currentIndex++;
                scrollToSlide(currentIndex);
            }, 6000);
        }
    }

    function resetInterval() {
        if (autoPlayInterval !== undefined) {
            clearInterval(autoPlayInterval);
        }
        startInterval();
    }

    if (dots.length > 0) {
        updateDots(0);
        startInterval();
    }

    container?.addEventListener('scroll', () => {
        const index = Math.round(container.scrollLeft / container.offsetWidth);
        if (index !== currentIndex && index < dots.length) {
            updateDots(index);
            currentIndex = index;
        }
    });
</script>

<style>
    .no-scrollbar::-webkit-scrollbar { display: none; }
    .no-scrollbar { -ms-overflow-style: none; scrollbar-width: none; }

    #carousel-container img {
        height: 100% !important;
        width: 100% !important;
        object-fit: cover !important;
    }
</style>