---
// src/components/NoticiaCard.astro
interface Props {
    titulo: string;
    resumo: string;
    categoria: string;
    data: Date;
    imagem: string;
    link: string;
}

const { titulo, resumo, categoria, data, imagem, link } = Astro.props;

// --- LÓGICA DE FORMATAÇÃO DA DATA ---
const dataObj = new Date(data);

// 1. Data: dd/mm/aaaa
const diaMesAno = dataObj.toLocaleDateString('pt-BR', {
    day: '2-digit',
    month: '2-digit',
    year: 'numeric'
});

// 2. Hora: HHhMM (Ex: 13h10)
const horaMinuto = dataObj.toLocaleTimeString('pt-BR', {
    hour: '2-digit',
    minute: '2-digit'
}).replace(':', 'h');

const dataFinal = `${diaMesAno} às ${horaMinuto}`;
---

<a href={link} class="group block bg-white rounded-[2rem] overflow-hidden shadow-lg hover:shadow-2xl transition-all duration-300 transform hover:-translate-y-1 border border-ice flex flex-col h-full">
    <div class="relative h-48 overflow-hidden">
        <img 
            src={imagem} 
            alt={titulo} 
            class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-110"
        />
        <div class="absolute top-4 left-4">
            <span class="bg-red-base text-white text-[10px] font-black px-3 py-1 rounded-full uppercase tracking-widest shadow-md">
                {categoria}
            </span>
        </div>
    </div>

    <div class="p-6 flex flex-col flex-grow">
        <div class="flex items-center gap-2 mb-3 opacity-60">
            <div class="w-2 h-2 rounded-full bg-red-base"></div>
            <span class="text-[10px] font-bold text-navy-soft uppercase tracking-widest">
                {dataFinal}
            </span>
        </div>

        <h3 class="text-xl font-black text-navy-dark leading-tight mb-3 group-hover:text-red-base transition-colors uppercase italic tracking-tight">
            {titulo}
        </h3>
        
        <p class="text-navy-soft text-sm leading-relaxed mb-6 line-clamp-3 flex-grow">
            {resumo}
        </p>

        <div class="mt-auto pt-4 border-t border-ice">
            <span class="text-[10px] font-black text-red-base uppercase tracking-widest flex items-center gap-2 group-hover:gap-4 transition-all">
                Ler mais
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="3" stroke="currentColor" class="w-3 h-3">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5 21 12m0 0-7.5 7.5M21 12H3" />
                </svg>
            </span>
        </div>
    </div>
</a>