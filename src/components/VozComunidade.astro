---
// src/components/VozComunidade.astro
const { bairro, relato, autor } = Astro.props;
---

<div class="bg-gray-50 border-l-4 border-navy-base p-6 rounded-sm shadow-sm hover:shadow-md transition-all">
    <div class="flex items-center gap-2 mb-3">
        <span class="bg-navy-base text-white text-[10px] font-black px-2 py-1 rounded-sm uppercase tracking-widest shadow-sm">
            Voz da Comunidade
        </span>
        <span class="text-gray-500 text-[10px] font-bold uppercase tracking-widest">
            {bairro}
        </span>
    </div>
    
    <blockquote class="text-gray-700 font-medium leading-relaxed mb-4 text-sm">
        "{relato}"
    </blockquote>
    
    <div class="flex items-center gap-2">
        <div class="w-6 h-6 bg-navy-base rounded-full flex items-center justify-center text-[10px] font-bold text-white shadow-sm">
            {autor[0]}
        </div>
        <span class="text-[10px] text-gray-500 font-black uppercase tracking-widest">{autor}</span>
    </div>
</div>