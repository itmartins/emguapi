---
// src/layouts/Layout.astro
import '../styles/global.css'; 

// Análise de acessos ao site (Vercel Analytics)
import Analytics from '@vercel/analytics/astro'

// 1. IMPORTAR OS COMPONENTES
import Footer from '../components/Footer.astro'; 
import CookieConsent from '../components/CookieConsent.astro'; // Adicionado aqui

interface Props {
    title: string;
    description?: string;
    image?: string; 
    tags?: string[];
}

const { 
    title, 
    description = "Notícias, serviços e informações sobre Guapimirim.", 
    image = "/fotos/emguapi-capa.png",
    tags = []
} = Astro.props;

// 2. Ajuste do Link para funcionar no Zap usando o domínio automático
const siteURL = "https://www.emguapi.com"; 
const imageURL = new URL(image, siteURL).href;
---

<!doctype html>
<html lang="pt-br">
    <head>
        <meta property="fb:app_id" content="1506785261006656" />
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="generator" content={Astro.generator} />
        
        <title>{title}</title>
        <meta name="description" content={description} />

        <meta property="og:type" content="article" />
        <meta property="og:title" content={title} />
        <meta property="og:description" content={description} />
        <meta property="og:image" content={imageURL} />
        <meta property="og:url" content={Astro.url} />

        <meta name="twitter:card" content="summary_large_image" />
        <meta name="twitter:title" content={title} />
        <meta name="twitter:description" content={description} />
        <meta name="twitter:image" content={imageURL} />

        <script async src="https://www.googletagmanager.com/gtag/js?id=G-FT7DRC4XE3"></script>
        <script is:inline>
        window.dataLayer = window.dataLayer || [];
        function gtag(){dataLayer.push(arguments);}

        // 1. Define o consentimento padrão como 'denied' (negado)
        gtag('consent', 'default', {
            'ad_storage': 'denied',
            'ad_user_data': 'denied',
            'ad_personalization': 'denied',
            'analytics_storage': 'denied'
        });

        gtag('js', new Date());
        gtag('config', 'G-FT7DRC4XE3');
        </script>

        {tags && tags.map(tag => (
            <meta property="article:tag" content={tag} />
        ))}
        
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;900&display=swap" rel="stylesheet">
    </head>
    
    <body class="bg-gray-50 font-sans text-navy-base flex flex-col min-h-screen">
        
        <div class="flex-grow">
            <slot />
        </div>
        
        <Footer />
        
        <CookieConsent />
        
        <Analytics />
        
        <div id="fb-root"></div>
        <script async defer crossorigin="anonymous" src="https://connect.facebook.net/pt_BR/sdk.js#xfbml=1&version=v18.0" nonce="12345"></script>
    </body>
</html>

<style is:global>
    /* ----------------------------------------- */
    /* AUTOMATIZAÇÃO DE CITAÇÕES (BLOCKQUOTE)    */
    /* ----------------------------------------- */
    
    /* Remove a barra lateral padrão cinza/feia do Tailwind */
    .prose blockquote {
        border-left: none !important;
        padding: 2rem 1rem !important;
        margin: 3rem 0 !important;
        position: relative;
        font-style: normal !important;
        color: #112240 !important; /* Cor navy-dark */
        font-size: 1.125rem !important; /* text-lg */
        font-weight: 700 !important;
        line-height: 1.625 !important;
        text-align: center !important;
        quotes: none !important; /* Remove as aspas automáticas */
    }

    /* Desenha as linhas cinzas (cima e baixo) */
    .prose blockquote::before,
    .prose blockquote::after {
        content: "";
        position: absolute;
        left: 0;
        right: 0;
        height: 1px;
        background-color: #d1d5db !important; /* gray-300 */
    }

    .prose blockquote::before { top: 0; }
    .prose blockquote::after { bottom: 0; }

    /* Desenha a barrinha vermelha (cima e baixo) */
    .prose blockquote p::before,
    .prose blockquote p::after {
        content: "" !important; /* Sobrescreve as aspas do Tailwind */
        position: absolute;
        left: 50%;
        transform: translateX(-50%);
        width: 4rem !important; /* w-16 */
        height: 4px !important;
        background-color: #dc2626 !important; /* red-base */
        display: block !important;
    }

    /* Posiciona a barra vermelha exatamente em cima das linhas cinzas */
    .prose blockquote p::before { top: -1.5px; }
    .prose blockquote p::after { bottom: -1.5px; }

    /* Remove margens extras do parágrafo de dentro */
    .prose blockquote p {
        margin: 0 !important;
    }
</style>