---
// src/layouts/Layout.astro
import '../styles/global.css'; 

// Análise de acessos ao site (Vercel Analytics)
import Analytics from '@vercel/analytics/astro'

// 1. IMPORTAR OS COMPONENTES
import Footer from '../components/Footer.astro'; 
import CookieConsent from '../components/CookieConsent.astro'; // Adicionado aqui

interface Props {
    title: string;
    description?: string;
    image?: string; 
    tags?: string[];
}

const { 
    title, 
    description = "Notícias, serviços e informações sobre Guapimirim.", 
    image = "/fotos/emguapi-capa.png",
    tags = []
} = Astro.props;

// 2. Ajuste do Link para funcionar no Zap usando o domínio automático
const siteURL = "https://www.emguapi.com"; 
const imageURL = new URL(image, siteURL).href;
---

<!doctype html>
<html lang="pt-br">
    <head>
        <meta property="fb:app_id" content="1506785261006656" />
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="generator" content={Astro.generator} />
        
        <title>{title}</title>
        <meta name="description" content={description} />

        <meta property="og:type" content="article" />
        <meta property="og:title" content={title} />
        <meta property="og:description" content={description} />
        <meta property="og:image" content={imageURL} />
        <meta property="og:url" content={Astro.url} />

        <meta name="twitter:card" content="summary_large_image" />
        <meta name="twitter:title" content={title} />
        <meta name="twitter:description" content={description} />
        <meta name="twitter:image" content={imageURL} />

        <script async src="https://www.googletagmanager.com/gtag/js?id=G-FT7DRC4XE3"></script>
        <script is:inline>
        window.dataLayer = window.dataLayer || [];
        function gtag(){dataLayer.push(arguments);}

        // 1. Define o consentimento padrão como 'denied' (negado)
        gtag('consent', 'default', {
            'ad_storage': 'denied',
            'ad_user_data': 'denied',
            'ad_personalization': 'denied',
            'analytics_storage': 'denied'
        });

        gtag('js', new Date());
        gtag('config', 'G-FT7DRC4XE3');
        </script>

        {tags && tags.map(tag => (
            <meta property="article:tag" content={tag} />
        ))}
        
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;900&display=swap" rel="stylesheet">
    </head>
    
    <body class="bg-gray-50 font-sans text-navy-base flex flex-col min-h-screen">
        
        <div class="flex-grow">
            <slot />
        </div>
        
        <Footer />
        
        <CookieConsent />
        
        <Analytics />
        
        <div id="fb-root"></div>
        <script async defer crossorigin="anonymous" src="https://connect.facebook.net/pt_BR/sdk.js#xfbml=1&version=v18.0" nonce="12345"></script>
    </body>
    <script>
        // Bloqueia o botão direito do mouse (menu de contexto)
        document.addEventListener('contextmenu', function(e) {
            e.preventDefault();
        });

        // Bloqueia atalhos de teclado usados para cópia e inspeção de código
        document.addEventListener('keydown', function(e) {
            // Bloqueia o F12 (Inspecionar)
            if (e.key === 'F12') {
                e.preventDefault();
            }
            // Bloqueia Ctrl+C, Ctrl+A (selecionar tudo), Ctrl+U (ver código-fonte), Ctrl+S (salvar), Ctrl+P (imprimir)
            if (e.ctrlKey && (e.key.toLowerCase() === 'c' || e.key.toLowerCase() === 'a' || e.key.toLowerCase() === 'u' || e.key.toLowerCase() === 's' || e.key.toLowerCase() === 'p')) {
                e.preventDefault();
            }
            // Bloqueia Ctrl+Shift+I, Ctrl+Shift+C, Ctrl+Shift+J (Ferramentas de Desenvolvedor)
            if (e.ctrlKey && e.shiftKey && (e.key.toLowerCase() === 'i' || e.key.toLowerCase() === 'c' || e.key.toLowerCase() === 'j')) {
                e.preventDefault();
            }
        });
    </script>
</html>

<style is:global>
    /* ----------------------------------------- */
    /* AUTOMATIZAÇÃO DE CITAÇÕES (BLOCKQUOTE)    */
    /* ----------------------------------------- */
    
    .prose blockquote {
        border: none !important; /* Remove QUALQUER borda lateral que o Tailwind tente colocar */
        border-top: 1px solid #d1d5db !important; /* Linha cinza em cima */
        border-bottom: 1px solid #d1d5db !important; /* Linha cinza embaixo */
        padding: 2.5rem 1rem !important; /* Respiro interno */
        margin: 3rem 0 !important; /* Distância do resto do texto */
        position: relative;
        font-style: normal !important;
        color: #112240 !important; /* Cor navy-dark */
        font-size: 1.125rem !important; /* Tamanho da fonte */
        font-weight: 700 !important; /* Negrito */
        line-height: 1.625 !important;
        text-align: center !important;
        background: transparent !important; /* Garante que não tenha fundo cinza */
        quotes: none !important;
    }

    /* Remove as aspas automáticas feias do Tailwind */
    .prose blockquote p::before,
    .prose blockquote p::after {
        content: none !important;
        display: none !important;
    }

    /* Desenha a barrinha vermelha (cima) */
    .prose blockquote::before {
        content: "" !important;
        position: absolute;
        left: 50%;
        transform: translateX(-50%);
        width: 4rem !important; /* Largura da barra vermelha */
        height: 4px !important;
        background-color: #dc2626 !important; /* Cor red-base */
        top: -2.5px; /* Centraliza exatamente em cima da borda de 1px */
    }

    /* Desenha a barrinha vermelha (baixo) */
    .prose blockquote::after {
        content: "" !important;
        position: absolute;
        left: 50%;
        transform: translateX(-50%);
        width: 4rem !important;
        height: 4px !important;
        background-color: #dc2626 !important;
        bottom: -2.5px; /* Centraliza exatamente em cima da borda de 1px */
    }

    /* Remove margens extras do parágrafo de dentro */
    .prose blockquote p {
        margin: 0 !important;
    }
    
    /* ----------------------------------------- */
    /* BLOQUEIO DE SELEÇÃO E CÓPIA               */
    /* ----------------------------------------- */
    
    /* Bloqueia a seleção de texto (ficar azul) em todo o site */
    body {
        -webkit-user-select: none !important;
        -moz-user-select: none !important;
        -ms-user-select: none !important;
        user-select: none !important;
    }

    /* Impede o leitor de "arrastar" as imagens para a área de trabalho */
    img {
        -webkit-user-drag: none !important;
        -khtml-user-drag: none !important;
        -moz-user-drag: none !important;
        -o-user-drag: none !important;
    }
</style>